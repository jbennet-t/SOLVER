<h1>Edit Election</h1>

<%= form_with(model: @election, local: true) do |form| %>

  <% if @election.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@election.errors.count, "error") %> prohibited
        this election from being saved:
      </h2>
      <ul>
        <% @election.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :election_title %><br>
    <%= form.text_field :election_title %>
    <%= sanitize @election.election_title %>
  </p>

  <p>
    <%= form.label :election_date %><br>
    <%= form.date_select :election_date %>
  </p>

  <p>
    <%= form.label :election_type %><br>
    <%= form.text_field :election_type %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back to Election List', elections_path %>
