<title>Add Candidate</title>



<h1>New Candidate</h1>

<%= form_with scope: :candidates, url: candidates_path, local: true do |form| %>

  <% if @candidates.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@candidates.errors.count, "error") %> prohibited
        this candidate from being added:
      </h2>
      <ul>
        <% @candidates.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :political_affiliation%><br>
    <%= form.text_field :political_affiliation %>
  </p>

  <p>
    <%= form.label :info%><br>
    <%= form.text_area :info %>
  </p>

  <p>
    <%= form.label :election%><br>
    <%= form.collection_select :attached_election, Election.all, :id, :election_title%>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>



<%= link_to 'Back to Main Page', main_page_index_path %>